{
  "name": "devconnector",
  "version": "1.0.0",
  "description": "A social media platform for developers to connect",
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "lint": "eslint 'routes/' 'middleware/' 'config/' '*.js'",
    "prettier": "prettier --list-different 'routes/**/*.js' 'middleware/**/*.js' 'config/**/*.js' '*.js'",
    "lint:fix": "eslint routes/ middleware/ config/ *.js --fix",
    "prettier:fix": "prettier --write 'routes/**/*.js' 'middleware/**/*.js' 'config/**/*.js' '*.js'",
    "ci": "npm-run-all lint prettier",
    "ci:fix": "npm-run-all lint:fix prettier:fix",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pranavwaikar/DevConnector.git"
  },
  "author": "pranavwaikar@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pranavwaikar/DevConnector/issues"
  },
  "homepage": "https://github.com/pranavwaikar/DevConnector#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.10",
    "request": "^2.88.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^6.1.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.2"
  }
}
